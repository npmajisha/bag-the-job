extends layout
block content
    .container-fluid

        .row
            form.form-horizontal.col-md-offset-3.col-md-6
                fieldset
                    // Text input
                    .form-group.col-md-5
                        input#keywords.form-control.input-md(name='keywords', type='text', placeholder='Keywords')
                    // Text input
                    .form-group.col-md-5
                        input#location.form-control.input-md(name='location', type='text', placeholder='Location', autocomplete='on')
                    // Button
                    .form-group.col-md-1.col-md-push-1
                        button#search.btn.btn-success(name='search') Search
        legend

        .row
            #summary.col-md-6.col-md-offset-3(style="display: none;")

        .row
            #pagination.col-md-8.col-md-offset-2(style="display: none;")
                #pages

        .row
            #jobs.col-md-6.col-md-offset-3(style="display: none;")